<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root prefWidth="1000.0" spacing="10.0" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jabref.gui.entryeditor.aichattab.components.aichat.AiChatComponent">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-border-color: black;" VBox.vgrow="ALWAYS">
         <content>
            <VBox fx:id="chatVBox" spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
               </children>
            </VBox>
         </content>
      </ScrollPane>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <TextField fx:id="userPromptTextField" onAction="#internalSendMessageEvent" HBox.hgrow="ALWAYS" />
            <Button fx:id="submitButton" mnemonicParsing="false" onAction="#internalSendMessageEvent" text="%Submit" />
         </children>
      </HBox>
      <HBox spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onClearChatHistoryClick" text="%Clear chat history" />
            <BorderPane HBox.hgrow="ALWAYS">
               <center>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%The AI may generate inaccurate or inappropriate responses. Please verify any information provided." BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
         </children>
      </HBox>
   </children>
</fx:root>
