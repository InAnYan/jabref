<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<fx:root type="Pane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jabref.gui.ai.components.privacynotice.PrivacyNoticeComponent">
   <children>
      <VBox spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%Privacy notice">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%JabRef uses OpenAI to enable 'chatting' with PDF files. OpenAI is an external service. To enable JabRef chatting with PDF files, the content of the PDF files need to be shared with OpenAI.">
               <font>
                  <Font size="14.0" />
               </font>
            </Text>
            <Text layoutX="20.0" layoutY="77.0" strokeType="OUTSIDE" strokeWidth="0.0" text="%As soon as you ask a question, the text content of all PDFs attached to the entry are send to OpenAI.">
               <font>
                  <Font size="14.0" />
               </font>
            </Text>
            <TextFlow>
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%The privacy policy of OpenAI applies. You find it at">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Text>
                  <Hyperlink onAction="#onPrivacyHyperlinkClick" text="https://openai.com/policies/privacy-policy/">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Hyperlink>
               </children>
            </TextFlow>
            <Button mnemonicParsing="false" onAction="#onIAgreeButtonClick" text="%I agree">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</fx:root>
